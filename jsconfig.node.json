{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "checkJs": true,
    
    /* Bundler mode */
    "allowJs": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true
  },
  "include": ["vite.config.js"]
}
